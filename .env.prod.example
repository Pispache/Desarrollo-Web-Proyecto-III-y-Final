# =====================
# Production environment example (.env)
# Copy this to .env.prod and fill real values
# =====================

# ---------- Core DB (SQL Server)
SA_PASSWORD=ChangeThisStrongSaPwd!
DB_NAME=MarcadorDB

# ---------- API (.NET)
ASPNETCORE_URLS=http://0.0.0.0:8080
JWT_SECRET=change-this-secret
JWT_ISSUER=https://api.tu-dominio.com
JWT_AUDIENCE=https://tu-dominio.com
JWT_EXPIRES_MINUTES=60
ADMIN_USERNAME=admin
ADMIN_PASSWORD=ChangeThisAdminPwd!

# ---------- Auth Service (Mongo / OAuth)
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=ChangeThisMongoPwd!
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
FRONTEND_URL=https://tu-dominio.com
CORS_ORIGIN=https://tu-dominio.com,https://www.tu-dominio.com
GOOGLE_CALLBACK_URL=https://tu-dominio.com/api/auth/google/callback
FACEBOOK_CALLBACK_URL=https://tu-dominio.com/api/auth/facebook/callback
GITHUB_CALLBACK_URL=https://tu-dominio.com/api/auth/github/callback
SESSION_SECRET=ChangeThisSessionSecret

# ---------- Reports service (FastAPI)
SYSTEM_LOGO_URL=https://api.tu-dominio.com/uploads/logos/system.svg
API_BASE_URL=https://api.tu-dominio.com
UI_BASE_URL=https://tu-dominio.com
REPORTS_BEARER_TOKEN=

# ---------- Postgres (reports)
POSTGRES_USER=reports_admin
POSTGRES_PASSWORD=ChangeThisReportsPwd!
POSTGRES_DB=reportsdb

# ---------- ETL
# MSSQL: ODBC Driver 18
# Ejemplo: DRIVER={ODBC Driver 18 for SQL Server};Server=db,1435;Database=MarcadorDB;UID=sa;PWD=...;TrustServerCertificate=yes;
MSSQL_CS=
POSTGRES_CS=host=postgres port=5432 dbname=reportsdb user=reports_admin password=ChangeThisReportsPwd!
ETL_INTERVAL_SECONDS=120
ETL_MAX_RETRIES=3
ETL_RETRY_DELAY_SECONDS=5
